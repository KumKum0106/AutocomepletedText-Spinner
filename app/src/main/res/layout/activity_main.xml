<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Write your hobby?"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- AutoComplete TextViews is used for Completing the words automatically.
    It show suggestions of the words that the user can select -->
    <AutoCompleteTextView
        android:id="@+id/autocompleteTextView"
        android:layout_width="300dp"
        android:layout_below="@+id/textview"
        android:layout_marginStart="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:hint="Enter your Hobby"
        android:textAlignment="center"
        android:background="#CDDBE6"/>

    <!-- Spinner is like a dropdown list-->
    <Spinner
        android:id="@+id/courses"
        android:layout_height="50dp"
        android:layout_width="160dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="140dp"
        android:background="#CDDBE6"
        android:layout_below="@+id/autocompleteTextView"/>

</RelativeLayout>